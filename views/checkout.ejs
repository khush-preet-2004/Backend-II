<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .checkout-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .checkout-summary {
            padding: 15px;
            background: #f1f1f1;
            border-radius: 10px;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            padding: 5px 0;
            font-size: 16px;
        }
        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 18px;
        }
    </style>
</head>
<body>

    <%- include('partials/header') %>

    <div class="container">
        <div class="checkout-container text-center">
            <h2 class="fw-bold">Checkout</h2>

            <% if (cart.length > 0) { %>
                <div class="checkout-summary mt-3">
                    <h4>Order Summary</h4>
                    <ul>
                        <% cart.forEach(item => { %>
                            <li><strong><%= item.name %></strong> (x<%= item.quantity %>) - $<%= item.price * item.quantity %></li>
                        <% }) %>
                    </ul>
                    <hr>
                    <h4 class="fw-bold">Total: $<%= cart.reduce((total, item) => total + item.price * item.quantity, 0) %></h4>
                </div>
                <a href="/payment" class="btn btn-primary mt-4">Proceed to Payment</a>
            <% } else { %>
                <p class="fs-5 mt-3">Your cart is empty.</p>
                <a href="/clothingproducts" class="btn btn-secondary">Continue Shopping</a>
            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>

</body>
</html>
