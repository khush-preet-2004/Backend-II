<%- include('partials/header') %>


<!-- Hero Section -->
<section class="hero text-center text-white d-flex align-items-center justify-content-center" style="height: 80vh; background: url('/images/banner.jpg') no-repeat center center/cover;">
    <div class="container">
        <h1 class="display-3 fw-bold">Welcome to Trendify</h1>
        <p class="lead">Discover the latest fashion trends at unbeatable prices.</p>
        <a href="/clothingproducts" class="btn btn-primary btn-lg mt-3">Shop Now</a>
    </div>
</section>

<!-- Categories Section -->
<section class="container my-5">
    <h2 class="text-center fw-bold">Shop by Category</h2>
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <div class="card">
                <img src="/images/men.jpg" class="card-img-top" alt="Men">
                <div class="card-body">
                    <h5 class="card-title">Men</h5>
                    <a href="/clothingproducts" class="btn btn-dark">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="/images/women.jpg" class="card-img-top" alt="Women">
                <div class="card-body">
                    <h5 class="card-title">Women</h5>
                    <a href="/clothingproducts" class="btn btn-dark">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="/images/kids.jpg" class="card-img-top" alt="Kids">
                <div class="card-body">
                    <h5 class="card-title">Kids</h5>
                    <a href="/clothingproducts" class="btn btn-dark">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trending Clothing Products -->
<section class="container my-5">
    <h2 class="text-center fw-bold">Trending Clothing Products</h2>
    <div class="row mt-4">
        <% 
        const trendingProducts = products.filter(p => 
        ["Men's Jacket", "Women's Dress", "Kids' T-shirt", "Men's Jeans", "Women's Blazer", "Kids' Hoodie"].includes(p.name)
        );
        %>
        
        <% if (trendingProducts.length > 0) { %>
            <% trendingProducts.forEach(product => { %>
                <div class="col-md-4 mb-4"> 
                    <div class="card h-100"> 
                        <img src="/images/products/<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="text-muted">$<%= product.price %></p>
                            <a href="/cart" class="btn btn-primary w-100">Add to Cart</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center">No products available.</p>
        <% } %>
    </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3">
    <p>&copy; 2025 Trendify. All Rights Reserved.</p>
</footer>
